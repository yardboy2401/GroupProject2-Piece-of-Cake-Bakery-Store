<!DOCTYPE html>
<html lang="en">
{{!-- login/signup front-end page with fields and buttons --}}
<link rel="stylesheet" href="./css/login.css">
<div class="wrapper">
<head>

<body>
        <header class="main-header">
            <nav class="nav main-nav">
            <li>
                <p><a class="link" href="/">Home</a></p>
            </li>
                        <li>
                <p><a class="link" href="/about">About</a></p>
            </li>
            {{#if loggedIn}}
            <li>
                <p><a class="link" href="/store">Store</a></p>
            </li>
            <li>
                <p><button id="logout-btn" class="btn-no-style">Logout</button> </p>
            </li>

            {{else}}
            <li>
                <p><a class="link" href="/login">Login</a></p>
            </li>
            {{/if}}
            </nav>
            <h1 class="store-name store-name-large">Piece of Cake</h1>
        </header>


   

    <div class="container my-5">
        <div class="row">
            <div class="col-sm-4">

 <form class="login-form">
        <div class="padding-md">
            <label for="email-login">Email:</label>
            <input type="text" id="email-login" class="form-control" />
        </div>
        <div class="padding-md">
            <label for="password-login">Password:</label>
            <input type="password" id="password-login" class="form-control" />
        </div>
        <div class="padding-md">
            <button type="submit" class="btn btn-primary" id="login-btn">Login</button>
        </div>
    </form>
                <form class="signup-form my-5">
                    <div class="padding-md">
                        <label for="username-signup">Username:</label>
                        <input id="username-signup" type="text" class="form-control">
                    </div>
                    <div class="padding-md">
                        <label for="email-signup">Email:</label>
                        <input type="text" id="email-signup" class="form-control" />
                    </div>
                    <div class="padding-md">
                        <label for="password-signup">Password:</label>
                        <input type="password" id="password-signup" class="form-control" />
                    </div>
                    <div class="padding-md">
                        <button type="submit" class="btn btn-primary" id="signup-btn">Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

</body>

<script src="/js/login.js"></script>